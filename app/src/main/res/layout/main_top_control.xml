<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

    <ImageView
        android:id="@+id/tv_title"
        android:layout_marginLeft="@dimen/px12"
        android:layout_marginTop="@dimen/px8"
        android:src="@drawable/zhaoxin"
        android:layout_width="@dimen/px180"
        android:layout_height="@dimen/px80"
        />

    <View
        android:id="@+id/v_divider"
        android:layout_width="1.5px"
        android:layout_height="40px"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20px"
        android:layout_marginTop="@dimen/px20"
        android:layout_toRightOf="@id/tv_title"
        android:background="@color/light_gray_hint_text_color"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_name"
        style="@style/textPurpleTitle"
        android:layout_marginLeft="20px"
        android:layout_marginTop="@dimen/px20"
        android:layout_toRightOf="@id/v_divider"
        android:text="@string/zhaoxin_ktv_title"
        android:visibility="visible"
        android:textSize="28sp"
        android:textColor="@color/white"
        />


    <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-10px"
        android:background="@drawable/btn_request_ordersongs"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/et_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:layout_toLeftOf="@id/btn_order"
        android:background="@drawable/search_normal"
        android:gravity="center_vertical"
        android:hint="@string/search_edit_hint"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingLeft="35dip"
        android:textColor="#fff"
        android:lines="1"
        android:textColorHint="@color/light_gray_hint_text_color"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/et_search_hl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16px"
        android:layout_marginTop="20px"
        android:layout_toLeftOf="@id/btn_order"
        android:background="@drawable/search_press"
        android:gravity="center_vertical"
        android:paddingLeft="70px"
        android:lines="1"
        android:textColor="#fff"
        android:textColorHint="#f00"
        android:visibility="invisible"/>


</RelativeLayout>