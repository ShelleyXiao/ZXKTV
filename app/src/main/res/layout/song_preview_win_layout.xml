<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<com.kk.taurus.playerbase.widget.BaseVideoView-->
    <!--android:id="@+id/videoView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_margin="2dp"-->
    <!--android:layout_weight="6"-->
    <!--android:background="#000000"-->
    <!--/>-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="6">

        <SurfaceView
            android:id="@+id/video_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextureView
            android:id="@+id/video_textrue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sel_btn_focus"
            android:gravity="center"
            android:text="@string/preview_order_btn"
            android:textColor="@color/checkCircle_backgroundColor"
            android:textSize="22sp"
            />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sel_btn_focus"
            android:gravity="center"
            android:text="@string/preview_close_btn"
            android:textColor="@color/checkCircle_backgroundColor"
            android:textSize="22sp"
            />

    </LinearLayout>

</LinearLayout>