<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             >


    <FrameLayout
        android:id="@+id/framelayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layerType="hardware"/>

    <com.zx.zxktv.ui.view.MarqueeTextView
        android:id="@+id/song_info"
        android:layout_width="@dimen/px600"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px8"
        android:layerType="software"
        android:padding="10dp"
        android:text="@string/video_play_info"
        android:textColor="#f5f2f2"
        android:textSize="18sp"
        app:scroll_first_delay="2000"
        app:scroll_mode="mode_forever"/>

    <TextView
        android:id="@+id/list_play_complete"
        android:layout_width="@dimen/px300"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/video_play_complete"
        android:textColor="#f5f2f2"
        android:textSize="24sp"
        android:visibility="gone"/>


</FrameLayout>
